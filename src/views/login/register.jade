extends ../layout

block mainContent
	h2 Register

	form.users(method='post', action='/Register')
		div
			label Email:
			input(name='user[email]', value=user.email || '')
		div
			label Password:
			input(name='user[password]', value=user.password || '', type='password')
		div
			input(type='submit', value='Register')


