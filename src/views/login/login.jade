extends ../layout

block mainContent
	.row
		.two.columns
		.eight.columns
			.panel#loginPanel
				h3 Login
				hr
				form.users(method='post', action='/Login')
					.row
						.five.columns
							label Email:
							input(name='user[email]', value=user.email || '', type='text')
							label Password:
							input(name='user[password]', value=user.password || '', type='password')
							input(type='submit', value='Log In')
		.two.columns
